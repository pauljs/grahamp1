<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.grahamp1.polldance">

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:icon="@drawable/totempoll" android:label="@string/app_name" android:theme="@style/AppTheme">

        <activity android:label="@string/app_name" android:name="com.grahamp1.polldance.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:label="@string/app_name" android:name="com.grahamp1.polldance.HostHomeActivity" android:screenOrientation="portrait">
        </activity>

        <activity android:label="@string/create_poll_title" android:name="com.grahamp1.polldance.CreatePollActivity" android:screenOrientation="portrait">
        </activity>


        <activity android:label="PollDance: Poll Results" android:name="com.grahamp1.polldance.ResultsActivity" android:screenOrientation="portrait">
        </activity>


        <!-- Testing client Response -->
        <activity android:label="@string/client_response_title" android:name="com.grahamp1.polldance.ClientResponseActivity" android:screenOrientation="portrait">
        </activity>

        <!-- Linking Host Home to Question Select Screen -->
        <activity android:label="@string/question_selection_title" android:name="com.grahamp1.polldance.QuestionSelectionActivity" android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>
