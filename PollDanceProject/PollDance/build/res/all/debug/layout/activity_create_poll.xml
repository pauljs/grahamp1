<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question:"
            android:id="@+id/textView"
            android:layout_gravity="left|center_vertical"
            android:textSize="20dp"/>

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/create_question_text"
            android:layout_gravity="left|center_vertical"
            android:background="#adebf6"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answers:"
                android:id="@+id/textView2"
                android:textSize="20dp"/>

    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Answer"
            android:id="@+id/create_answer_button"
            android:layout_gravity="right|center_vertical"/>

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="341dp"
            android:id="@+id/create_answer_list"
            android:layout_gravity="center"
            android:choiceMode="none"
            android:background="#adebf6"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Poll"
            android:id="@+id/share_poll_button"
            android:layout_gravity="center|bottom"/>


</LinearLayout>